input {
  beats {
    port => 5044
    ssl => true
    ssl_certificate => "{{ ssl_cert_directory }}/{{ ssl_cert }}"
    ssl_key => "{{ ssl_cert_directory }}/{{ ssl_key }}"

    add_field => { "index" => "%{[@metadata][beat]}" }
    add_field => { "index_type" => "beats" }

    congestion_threshold => {{ logstash_beats_congestion_threshold }}
  }
}
